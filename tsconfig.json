{
  "compilerOptions": {
    "module": "CommonJS",
		"jsx": "react",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"target": "es2017",
		"sourceMap": true,
		"skipLibCheck": true,
		"incremental": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "./dist",
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/__tests__/*", "**/__e2e__/*"],
}
